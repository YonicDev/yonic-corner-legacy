---
export interface Props {
    name: string;
    set?: string;
    sprite: string;
    thoughts?: string;
    height?: number;
    position?: "left"|"right";
}

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");

const { name, set = "default", sprite, thoughts, position = "right", height=200 } = Astro.props;
---
<div class="chara" style={{textAlign: position}}>
    <img src={`${baseUrl}/chara/${name}/${set}/${sprite}.gif`} alt={thoughts} title={thoughts} {height}/>
</div>