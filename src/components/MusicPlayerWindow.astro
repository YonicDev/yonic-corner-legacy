---
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<img class="navigation-tab" alt="Music player" src={baseUrl + "/ui/tab-player.gif"} width="200" height="32" />
<div class="player-window">
    <iframe name="player" frameborder="0" width="200" height="200" id="player-frame" src={baseUrl + "/player-object/null"} />
</div>

<style is:global>
    .player-window {
        background: #A1FFED;
        margin: 0;
        padding: 0;
        text-align: left;
        font-size: 10pt;
        border: 2px solid #003323;
        width: 200px;
        height: 200px;
    }
    #player-frame {
        border: none;
        width: 100%;
        height: 100%;
        overflow: hidden;
        background: #A1FFED;
    }
</style>