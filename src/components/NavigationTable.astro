---
interface Props {
    links: Array<{
        href: string,
        icon?: string,
        label: string
    }>,
    type: string,
    title: string
}

const {links, title, type} = Astro.props;
---

<img class="navigation-tab" alt={title} src={`/ui/tab-${type}.gif`} width="200" height="32" />
<ul class="navigation">
    {
        links.map(({href, icon, label}) => <li style={`list-style-image: ${icon? `url(${icon})` : "inherit"}`}><a {href}>{label}</a></li>)
    }
</ul>

<style is:global>
    .navigation-tab {
        display: block;
    }
    .navigation {
        background: #A1FFED;
        margin: 0;
        margin-bottom: 32px;
        padding: 10px 0;
        padding-left: 12px;
        border: 2px solid #003323;
        width: 200px;
        text-align: left;
        font-size: 10pt;
    }
    .navigation > li {
        margin: 3px 0;
        padding: 0;
    }
    .navigation-title {
        margin: 0;
        font-weight: bold;
        background-color: green;
        color: white;
    }
</style>